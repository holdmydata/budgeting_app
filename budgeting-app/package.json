{
  "name": "hold-my-budget",
  "private": true,
  "version": "1.0.0",
  "description": "A modern personal budgeting application",
  "author": "Hold My Data",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "npm run build && electron ."
  },
  "dependencies": {
    "@azure/msal-browser": "^4.8.0",
    "@azure/msal-react": "^3.0.7",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@microsoft/teams-js": "^2.36.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@tanstack/react-query": "^5.71.5",
    "axios": "^1.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^15.15.0",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^5.1.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.holdmybudget.app",
    "productName": "Hold My Budget",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/icons/win/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icons/mac/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icons/png/512x512.png"
    }
  }
}
